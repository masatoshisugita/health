<div class="row text-center no-gutters mb-1">
  <div class="col-sm-12">

  <%= form_with model: user, local: true do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="form-group mt-5">
      <%= f.label :name %><span>　※必須　(15文字以内)</span><br>
      <%= f.text_field :name ,:size=>"25",class: "form_user",placeholder: "名前を入力してください"  %>
    </div>

    <div class="form-group mt-5">
      <%= f.label :age %><span>　※必須</span><br>
      <%= f.number_field :age ,:size=>"25",class: "form_user",placeholder: "年齢を入力してください" %>
    </div>

    <div class="form-group mt-5">
      <%= f.label :email %><span>　※必須　(255文字以内)</span><br>
      <%= f.text_field :email ,:size=>"25",class: "form_user",placeholder: "メールアドレスを入力してください" %>
    </div>

    <div class="form-group mt-5">
      <%= f.label :height %><span>　※任意</span><br>
      <%= f.text_field :height ,:size=>"25",class: "form_user",placeholder: "身長を入力してください" %>
    </div>

    <div class="form-group mt-5">
      <%= f.label :image %><span class="user-file">　※任意</span><br>
      <%= f.file_field :image,:size=>"30" %>
    </div>

    <div class="form-group mt-5">
      <%= f.label :password %><span>　※必須　(6文字以上)</span><br>
      <%= f.password_field :password ,:size=>"25",class: "form_user",placeholder: "パスワードを入力してください"  %>
    </div>

    <div class="form-group mt-5">
      <%= f.label :password_confirmation %><span>　※必須　(6文字以上)</span><br>
      <%= f.password_field :password_confirmation ,:size=>"25",class: "form_user",placeholder: "再度パスワードを入力してください"  %>
    </div>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
  </div>
</div>

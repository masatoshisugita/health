<div class="row">
  <div class="offset-md-2 col-md-8">
    <h1 class="text-center">ユーザー詳細</h1>
    <table class="table table-hover table-d mt-5">
      <tbody>
        <tr>
          <th>名前</th>
          <td class="text-center"><%= link_to @user.name, @user %></td>
        </tr>
          <tr>
            <th>年齢</th>
            <td class="text-center"><%= @user.age %></td>
          </tr>
          <tr>
            <th>身長</th>
            <td class="text-center"><%= @user.height %></td>
          </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="offset-md-2 col-md-10">
    <div class="mt-2">
        <%= link_to '編集',edit_user_path, class: 'btn btn-primary mr-3' %>
        <%= link_to '削除',@user,method: :delete,data: { confirm: "タスク「#{@user.name}」を削除します。よろしいですか？" },class: 'btn btn-danger' %>
    </div>
  </div>
</div>